snippet head "vim plugin header" b
" vim: set sw=2 ts=2 sts=2 et
"
" Plugin:      $1
" Description: $2
" Maintainer:  `!v g:snips_author` <`!v g:snips_github`>
$0
endsnippet

snippet tpl "vim plugin template" b
if exists('g:loaded_${1:plugin}') || &cp
	finish
endif
let g:loaded_$1= 1
let s:save_cpo = &cpo
set cpo&vim

$0

let &cpo = s:save_cpo
unlet s:save_cpo
endsnippet
